{
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
        "release": true
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "header": "# Changelog"
        },
        "@release-it/bumper": {
            "in": "composer.json",
            "out": "composer.json"
        }
    }
}
